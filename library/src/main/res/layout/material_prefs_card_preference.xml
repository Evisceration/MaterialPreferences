<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_preference_root"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_prefs_card_margin"
    android:foreground="?android:attr/selectableItemBackground"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    card_view:cardCornerRadius="@dimen/material_prefs_card_corner_radius"
    card_view:cardElevation="@dimen/material_prefs_card_elevation"
    card_view:contentPadding="@dimen/material_prefs_card_content_padding">

    <LinearLayout
        android:id="@+id/card_preference_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/material_prefs_preference" />

    </LinearLayout>

</android.support.v7.widget.CardView>
